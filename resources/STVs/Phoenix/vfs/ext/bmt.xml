<!DOCTYPE vfs SYSTEM "vfs.dtd">
<vfs>
	<filters>
		<filter id="missingmetadata" label="Missing Metadata" class="org.jdna.sage.MissingMetadataFilter" />
	</filters>
	
	<views>
		<view id="missingmetadataview" label="Missing Metadata" flat="true">
			<description>Show Videos grouped by year</description>
			<source name="tv" />
			<source name="dvd" />
			<source name="bluray" />
			<source name="video" />

			<children>
				<filter by="missingmetadata"/>
				<sort by="title"/>
			</children>
		</view>
	
		<view id="videobyyear" label="Videos (by Year)" flat="true">
			<description>Show Videos grouped by year</description>
			<source name="dvd" />
			<source name="video" />
			<source name="bluray" />

			<children>
				<group by="year" keepSingleItemFolders="true" />
				<sort by="title" ascending="false"/>
			</children>
		</view>

		<view id="moviegenres" label="Movies Genre View" flat="true">
			<description>View all files by genre</description>
			<source name="dvd" />
			<source name="video" />
			<source name="bluray" />

			<children>
				<group by="genre" />
				<sort by="title" multilevel="true" foldersFirst="true" />
			</children>
		</view>

		<!-- To Nuke an existing view, simply declare it without a body -->
		<!-- 
		<view id="sageimports" visible="false" />
		-->
	</views>
</vfs>