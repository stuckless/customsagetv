<?xml version="1.0" encoding="UTF-8"?>
<SageTVPlugin>
	<Name>Sage Plugin Tools</Name>
	<Identifier>sage-plugin-tools</Identifier>
	<Description>Plugins tools that help with plugin development and testing</Description>
	<Author>stuckless</Author>
	<CreationDate>2010.04.10</CreationDate>
	<ModificationDate>@@last-modified@@</ModificationDate>
	<Version>@@version@@</Version>
	<Desktop>false</Desktop>

	<Dependency>
		<Plugin>sagex-api</Plugin>
		<MinVersion>7.0.7.0</MinVersion>
	</Dependency>

	<Dependency>
		<Plugin>dom4j</Plugin>
		<MinVersion>1.6</MinVersion>
	</Dependency>

	<PluginType>Standard</PluginType>

	<Package>
		<PackageType>JAR</PackageType>
		<Location>http://download.sage.tv/plugins/stuckless/sage-plugin-tools/sage-plugin-tools-jar-@@version@@.zip
		</Location>
		<MD5>@@jar-checksum@@</MD5>
	</Package>

	<Package>
		<PackageType>System</PackageType>
		<Location>http://download.sage.tv/plugins/stuckless/sage-plugin-tools/sage-plugin-tools-system-@@version@@.zip
		</Location>
		<MD5>@@system-checksum@@</MD5>
	</Package>

	<Package>
		<PackageType>STVI</PackageType>
		<Location>http://download.sage.tv/plugins/stuckless/sage-plugin-tools/sage-plugin-tools-stvi-@@version@@.zip
		</Location>
		<MD5>@@stvi-checksum@@</MD5>
	</Package>
	<STVImport>sage-plugin-tools.stvi</STVImport>

	<ImplementationClass>sagex.plugintools.DeveloperPlugin</ImplementationClass>
