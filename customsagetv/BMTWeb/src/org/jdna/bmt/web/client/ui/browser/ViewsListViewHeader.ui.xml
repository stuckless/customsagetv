<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.header {
		font-weight: bold;
		border-bottom: 2px solid #000080;
		padding-top: 3px;
		padding-bottom: 3px;
	}
	.selectView {
		cursor: pointer;
	}
	</ui:style>
	<g:HorizontalPanel addStyleNames="{style.header}" width="100%" spacing="5">
		<g:Label  ui:field="headerText" width="100%"></g:Label>
		<g:cell width="16px" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:Image title="Change view category" addStyleNames="{style.selectView}" ui:field="selectViewImage" url="images/16x16/preferences-system-windows.png"/>
		</g:cell>
	</g:HorizontalPanel>
</ui:UiBinder> 