<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:org.jdna.bmt.web.client.ui.util">
	<ui:style>
		.uload {
			margin-top: 5px;
			margin-bottom: 5px;
		}
		
		.label {
			font-weight: bold;
			padding-right: 5px;
		}
		
		.image {
			border-top: 2px solid black;
			border-bottom: 2px solid black;
			margin-bottom: 10px;
			padding-top: 5px;
			padding-bottom: 5px;
		}
		
		.button {
			margin-top: 5px;
		}
		
		.downloadBtn {
			margin-left: 5px;
		}
		
		.scroller {
			padding-bottom: 5px;
			border-bottom: 1px dotted black;
		}
		.message {
			height: 20px;
		}
	</ui:style>
	<g:VerticalPanel>
		<my:HorizontalButtonBar>
			<g:Button ui:field="postersButton">Posters</g:Button>
			<g:Button ui:field="backgroundsButton">Backgrounds</g:Button>
			<g:Button ui:field="bannersButton">Banners</g:Button>
		</my:HorizontalButtonBar>
		<g:HorizontalPanel addStyleNames="{style.message}">
			<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:Label ui:field="message"></g:Label>
			</g:cell>
		</g:HorizontalPanel>
		<g:HorizontalPanel addStyleNames="{style.uload}">
			<g:cell verticalAlignment="ALIGN_MIDDLE">
				<g:Label wordWrap="false" addStyleNames="{style.label}">Fanart URL</g:Label>
			</g:cell>
			<g:cell>
				<g:TextBox ui:field="downloadUrl"></g:TextBox>
			</g:cell>
			<g:Button ui:field="download" addStyleNames="{style.downloadBtn}">Download</g:Button>
		</g:HorizontalPanel>
		<g:VerticalPanel addStyleNames="{style.image}" width="100%">
			<g:cell horizontalAlignment="ALIGN_CENTER">
				<g:Image width="200px" ui:field="image"></g:Image>
			</g:cell>
			<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:HorizontalPanel>
					<g:Button addStyleNames="{style.button}" ui:field="makeDefault">Make Default</g:Button>
					<g:Button addStyleNames="{style.button}" ui:field="delete">Delete</g:Button>
				</g:HorizontalPanel>
			</g:cell>
		</g:VerticalPanel>
		<g:ScrollPanel width="350px" ui:field="scroller"
			alwaysShowScrollBars="false" addStyleNames="{style.scroller}">
			<g:HorizontalPanel ui:field="imagePanel">
			</g:HorizontalPanel>
		</g:ScrollPanel>
	</g:VerticalPanel>
</ui:UiBinder> 