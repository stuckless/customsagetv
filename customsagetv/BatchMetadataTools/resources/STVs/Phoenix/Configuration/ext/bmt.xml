<configuration id="bmt" label="Metadata Tools">
	<description>Metadata Tools Configuration</description>

	<group class="org.jdna.media.metadata.MetadataConfiguration"/>
	<group class="org.jdna.media.MediaConfiguration"/>
	<group class="org.jdna.url.UrlConfiguration"/>
	<group class="org.jdna.media.metadata.impl.dvdproflocal.DVDProfilerLocalConfiguration"/>
	<group class="org.jdna.media.metadata.impl.imdb.IMDBConfiguration"/>
	<group class="org.jdna.media.metadata.impl.mymovies.MyMoviesConfiguration"/>
	<group class="org.jdna.media.metadata.impl.sage.SageMetadataConfiguration"/>
	<group class="org.jdna.media.metadata.impl.tvdb.TVDBConfiguration"/>
	<group class="org.jdna.sage.PluginConfiguration"/>
	
	<!-- Some Phoenix Configuration Items, but we duplicate them here because they are related metadata/fanart -->
	<group label="Fanart">
		<description>Fanart Configuration</description>
		
		<field key="phoenix/mediametadata/fanartSupportClass" label="Fanart Class" defaultValue="sagex.phoenix.fanart.PhoenixFanartSupport">
			<description>Fanart Implementation (Do Not Change this unless you KNOW what you are doing)</description>
		</field>

		<field key="phoenix/mediametadata/mediaMetadataSupportClass" label="Metadata Implemenation" defaultValue="bmt.BMTMetadataSupport">
			<description>Phoenix Metadata Implementation.  Default is Metadata Tools (bmt), don't change unless you KNOW what you are doing.</description>
		</field>
		
		
		<field key="phoenix/mediametadata/parseMediaFileForTVSeries" label="Parse Display Title for TV Series Name" defaultValue="false" type="boolean">
			<description>This should never need to be enabled.  But if it is, then it parse the Display Title for the TV Series Name</description>
		</field>

		<field key="phoenix/mediametadata/tvSeriesRegex" label="TV Series Regexp" defaultValue=".*[\\/](.*)s([0-9]{1,2})\s*[exd]([[0-9]]{1,2})" editor="regex">
			<description>Regex to use when parsing the Series Name from the Display Title</description>
		</field>
		
		<field key="phoenix/mediametadata/tvSeasonRegex" label="TV Season Regexp" defaultValue=".*[\\/].*s([0-9]{1,2})\s*[exd]([[0-9]]{1,2})" editor="regex">
			<description>Regex to use when parsing the Season Number from the Display Title</description>
		</field>
	</group>

	<!-- Configuration for xbmc configuration -->
	<group label="XBMC imdb.xml Configuration">
		<description>Configuration Items for XBMC Scraper for IMDb</description>
		
		<field key="bmt/xbmc/imdb.xml/fullcredits" label="Enable Full Cast Credits" defaultValue="true" type="boolean">
			<description>Enable Full Cast Credits</description>
		</field>
		<field key="bmt/xbmc/imdb.xml/impawards" label="Enable IMPAwards" defaultValue="true" type="boolean">
			<description>Enable IMPAwards</description>
		</field>
		<field key="bmt/xbmc/imdb.xml/movieposterdb" label="Enable MoviePosterDB" defaultValue="true" type="boolean">
			<description>Enable MoviePosterDB</description>
		</field>
		<field key="bmt/xbmc/imdb.xml/trailer" label="Enable Trailer" defaultValue="true" type="boolean">
			<description>Enable Trailers</description>
		</field>
		<field key="bmt/xbmc/imdb.xml/fanart" label="Enable Fanart" defaultValue="true" type="boolean">
			<description>Enable Fanart</description>
		</field>
		<field key="bmt/xbmc/imdb.xml/imdbscale" label="IMDB Poster &amp; Actor Thumb(s) Size" defaultValue="512" type="int">
			<description>Poster Size (width)</description>
		</field>
		<field key="bmt/xbmc/imdb.xml/url" label="Input Alternative IMDb Source" defaultValue="akas.imdb.com">
			<description>IMDd Domain</description>
		</field>
	</group>
	
	<group label="Database Admin" editor="dbadmin">
		<description>Database Tools (initialize, sync, etc)</description>
	</group>
</configuration>