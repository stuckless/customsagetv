<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.item {
			border-bottom: 1px solid #E2C822;
			padding: 5 5 5 5;
			height: 1.5cm;
		}
		
		.title1 {
			font-weight: bold;
			font-size: 14pt;
		}
		
		.title2 {
		}
	</ui:style>
	
	<g:VerticalPanel addStyleNames="{style.item}" width="100%">
		<g:Label ui:field="name" wordWrap="false" addStyleNames="{style.title1}"/>
		<g:Label wordWrap="false" ui:field="id" addStyleNames="{style.title2}"/>
	</g:VerticalPanel>
</ui:UiBinder> 