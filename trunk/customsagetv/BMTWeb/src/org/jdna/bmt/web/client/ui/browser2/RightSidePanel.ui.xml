<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.searchpanel {
			margin-top: 5;
			margin-bottom: 5;
			border-bottom: 1px solid #F3F3F3;
		}
		
		.searchpanel table {
			border: 1px solid black;
			padding: 3px 3px 3px 3px;
		} 
		
		.searchpanel input {
			border: none;
		}

		.searchpanel img {
			border: none;
			padding-right: 5px;
			padding-left: 5px;
		}
		
		select {
			width: 100%;
		}
	</ui:style>
	<g:VerticalPanel>
		<g:HTMLPanel styleName="{style.searchpanel}">
			<table width="100%" cellpadding="0" cellspacing="0"><tr>
				<td valign="middle"><g:TextBox ui:field="searchBox"/></td>
				<td valign="middle"><g:Image url="images/16x16/system-search.png"/></td>
			</tr></table>
		</g:HTMLPanel>

		<g:ListBox ui:field="viewSelector"/>
		<g:VerticalPanel ui:field="views">		
		</g:VerticalPanel>
		
	</g:VerticalPanel>
</ui:UiBinder> 