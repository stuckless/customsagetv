<?xml version="1.0" encoding="UTF-8"?>
<SageTVPlugin>
  <Name>Metadata Tools for SageTV</Name>
  <Identifier>bmt</Identifier>
  <Description>Automatically fetches metadata/fanart for Movies and TV shows.  This is the core metadata updater, it does not include the Web Interface.  You can install the Web Interface separately if you want.</Description>
  <Screenshot><![CDATA[http://forums.sagetv.com/forums/attachment.php?attachmentid=9772&stc=1&d=1266629522]]></Screenshot>
  <Author>stuckless</Author>
  <CreationDate>2008.07.19</CreationDate>
  <ModificationDate>@@last-modified@@</ModificationDate>
  <Version>@@version@@</Version>
  <Desktop>false</Desktop>
  <ResourcePath>bmt</ResourcePath>
  <Webpage><![CDATA[http://forums.sagetv.com/forums/downloads.php?do=file&id=239]]></Webpage>

  <Dependency>
    <Plugin>phoenix-api</Plugin>
    <MinVersion>1.73.2</MinVersion>
  </Dependency>

  <Dependency>
    <Plugin>commons-net</Plugin>
    <MinVersion>1.4.1</MinVersion>
  </Dependency>

  <Dependency>
    <Plugin>htmlparser</Plugin>
    <MinVersion>1.6</MinVersion>
  </Dependency>

  <Dependency>
    <Plugin>lucene-core</Plugin>
    <MinVersion>2.4.1</MinVersion>
  </Dependency>

  <Dependency>
    <Plugin>sagex-api</Plugin>
    <MinVersion>7.0.6.5</MinVersion>
  </Dependency>

  <PluginType>Standard</PluginType>

  <Package>
    <PackageType>JAR</PackageType>
    <Location>http://download.sage.tv/plugins/stuckless/bmt/bmt-jar-@@version@@.zip</Location>
    <MD5>@@jar-checksum@@</MD5>
  </Package>
  
  <Package>
    <PackageType>System</PackageType>
    <Location>http://download.sage.tv/plugins/stuckless/bmt/bmt-system-@@version@@.zip</Location>
    <MD5>@@system-checksum@@</MD5>
  </Package>
  
  <ImplementationClass>bmt.BMTPluginActivator</ImplementationClass>
</SageTVPlugin>