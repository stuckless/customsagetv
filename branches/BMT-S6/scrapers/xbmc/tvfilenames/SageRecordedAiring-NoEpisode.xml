<?xml version="1.0" encoding="UTF-8"?>
<!-- 
   TV Filename Scraper.  Used to Scrape Show Name, AiringTitle, and AiringId from a Sage Recording
   $$1 is always the complete file uri
-->
<scraper name="title-sageRecordingNoEpisode" content="filename" thumb="thumb.png">
	<!-- 	input: 		$1=complete file uri -->
	<!-- 	returns: 	series name -->
	<GetShowName dest="3">
		<RegExp input="$$1" output="\1" dest="3">
			<expression>.*[/\\]([^-]+)-([0-9]+)-([0-9]{1,2})\.</expression>
		</RegExp>
	</GetShowName>

	<!-- 	input: 		$1=complete file uri -->
	<!-- 	returns: 	Sage Airing Id -->
	<GetAiringId dest="3">
		<RegExp input="$$1" output="\2" dest="3">
			<expression>.*[/\\]([^-]+)-([0-9]+)-([0-9]{1,2})\.</expression>
		</RegExp>
	</GetAiringId>
</scraper>
